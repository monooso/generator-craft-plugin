{
  "name": "<%= packageName %>",
  "type": "craft-plugin",
  "description": "<%= pluginDescription %>",
  "version": "<%= pluginVersion %>",
  "homepage": "https://github.com/<%= packageName %>",
  "license": "<%= license %>",
  "keywords": [
    "cms",
    "craftcms"
  ],
  "authors": [
    {
      "name": "<%= authorName %>",
      "email": "<%= authorEmail %>"<% if (authorWebsite) { %>,
        "homepage": "<%= authorWebsite %>"<%
      } %>
    }
  ],
  "support": {
    "email": "<%= authorEmail %>",
    "docs": "https://github.com/<%= packageName %>/blob/main/README.md",
    "issues": "https://github.com/<%= packageName %>/issues?state=open",
    "source": "https://github.com/<%= packageName %>"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4",
    "craftcms/cms": "^3.5"
  },
  "require-dev": {
    "nunomaduro/phpinsights": "^1.14",
    "sebastian/phpcpd": "^6.0.3"
  },
  "autoload": {
    "psr-4": {
      "<%= autoloadNamespace %>\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "<%= autoloadNamespace %>\\Tests\\": "tests/"
    }
  },
  "extra": {
    "name": "<%= pluginName %>",
    "handle": "<%= pluginHandle %>"
  }
}